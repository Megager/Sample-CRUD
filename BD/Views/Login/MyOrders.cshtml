@model IEnumerable<DAL.Entities.Order>
@{
    ViewBag.Title = "MyOrders";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>My Orders</h2>
<div class="col-md-10">
@foreach (var order in Model)
{
    <div class="order col-md-10">
        <h4>Name:</h4>
        <label>@order.Product.Description</label>
        <h4>Created date:</h4>
        <label>@order.CreatedDate</label>
        <h4>Is closed:</h4>
        <label>@order.IsClosed</label>
        @if (order.IsClosed)
        {
            <h4>Cloded date:</h4>
            <label>@order.UpdatedDate</label>
        }
    </div>
}
</div>
