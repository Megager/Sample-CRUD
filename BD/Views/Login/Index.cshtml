@model BD.Models.LoginModel
@{
    ViewBag.Title = "Login";
    Layout = "../Shared/_Layout.cshtml";
}

<div class="panel panel-login">
    <div class="panel-body">
        <div class="row">
            <div class="col-lg-12">
                <form id="login-form" action=@Url.Action("Index") method="post" role="form" style="display: block;">
                    <div class="form-group">
                        @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
                        <div class="col-md-8">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
                        <div class="col-md-8">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-8">
                            <div class="checkbox">
                                @Html.CheckBoxFor(m => m.RememberMe)
                                @Html.LabelFor(m => m.RememberMe)
                            </div>
                        </div>
                    </div>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        <div class="row">
                            <div style="text-align: center">
                                <input type="submit" class="form-control btn btn-default btn-success" value="Log In">
                            </div>
                        </div>
                    </div>
                </form>
                <a style="display: block" href=@Url.Action("SignUp") role="button" class="btn btn-primary btn-link">Sign up</a>
            </div>
        </div>
    </div>
</div>